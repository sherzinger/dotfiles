source "gpg2 -dq ~/.mutt/.mailbox_pw.gpg |"

set editor=`echo \$EDITOR`
set my_name="Sascha Herzinger"
set folder=imaps://imap.mailbox.org:993
set spoolfile=+INBOX
set postponed=+Drafts
set message_cachedir=~/.cache/mutt
